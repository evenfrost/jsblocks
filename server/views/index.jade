doctype html
html
head
//- body(data-query='on("mousedown", handler)')
body
  //- input(type='text', data-query='val(field)')
  //- div(style='background: yellow', data-query='text(field)'){{$this.field}}

  //- div My name is {{firstName}} {{lastName}} and I am {{age}} years old.
  //- div My name is {{fullName}} and I am {{age}} years old.

  //- form
    label first name
      input(type='text' data-query='val(firstName)')

    label last name
      input(type='text' data-query='val(lastName)')

    label age
      input(type='text' data-query='val(age)')

  ul
    li: a(href='#', data-query='navigateTo(home)') Home
    li: a(href='#', data-query='navigateTo(contacts)') Contact

  div(data-query='view(home)')
    h1 home view

  div(data-query='view(contacts)')
    h1 contacts view

  //- div {{hello}}
  //- div(data-query='view(signup)')
    h2 {{description}}
    div(data-query='with(profile)')
      input(placeholder='username', data-query='val(username)')
      span(data-query='visible(!username.valid()).html(username.errorMessage)')
    h3 Articles
    ul(data-query='each(articles)')
      li {{content}}

  each script in scripts
    script(src= script)
